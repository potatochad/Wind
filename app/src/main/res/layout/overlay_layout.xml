<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/overlay_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3000000"> <!-- Semi-transparent black -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="242dp"
        android:layout_gravity="center"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/overlayTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not enough points"
            android:textColor="#A69052"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/overlayMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="You've chosen to block this app.  Please return to Wind"
            android:textSize="18sp" />

        <Button
            android:id="@+id/leaveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Leave"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FFD700" />

    </LinearLayout>

</FrameLayout>
